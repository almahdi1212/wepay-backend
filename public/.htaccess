<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # ✅ ضمان استخدام HTTPS دائمًا (Render يعمل عبر HTTPS فقط)
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # ✅ تمرير Authorization Header (للـ API Tokens)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ✅ تمرير X-XSRF-Token Header (لـ SPA Frontend)
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:x-xsrf-token}]

    # ✅ إزالة الشرطة المائلة الزائدة (Trailing Slash)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # ✅ تحويل جميع الطلبات إلى index.php (Laravel Front Controller)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ✅ حماية الملفات الحساسة
<FilesMatch "\.(env|json|config|lock|gitignore|gitattributes|md|log)$">
    Require all denied
</FilesMatch>
