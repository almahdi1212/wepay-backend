<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # ✅ استخدم HTTPS فقط (تجنب حلقة إعادة التوجيه في Render)
    RewriteCond %{HTTPS} !=on
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # ✅ تمرير Authorization Header (للـ API Tokens)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ✅ تمرير X-XSRF-Token Header (لـ SPA Frontend)
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:x-xsrf-token}]

    # ✅ توجيه كل الطلبات غير الموجودة إلى index.php (Laravel Front Controller)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ✅ حماية الملفات الحساسة (لا يمكن الوصول إليها عبر المتصفح)
<FilesMatch "\.(env|json|config|lock|gitignore|gitattributes|md|log|sqlite)$">
    Require all denied
</FilesMatch>

# ✅ السماح فقط للمجلدات العامة بالوصول
<IfModule mod_dir.c>
    DirectoryIndex index.php
</IfModule>
