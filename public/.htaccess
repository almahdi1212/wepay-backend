<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # ✅ استخدم HTTPS دائمًا (Render يعمل عبر HTTPS فقط)
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # ✅ تمرير Authorization Header (للـ API Tokens)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # ✅ تمرير X-XSRF-Token Header (لـ SPA Frontend)
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:x-xsrf-token}]

    # ⚠️ ❌ تم تعطيل قاعدة إزالة الشرطة المائلة لتجنب 301 loop
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteCond %{REQUEST_URI} (.+)/$
    # RewriteRule ^ %1 [L,R=301]

    # ✅ توجيه كل الطلبات غير الموجودة إلى index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# ✅ حماية الملفات الحساسة (لا يمكن الوصول لها عبر المتصفح)
<FilesMatch "\.(env|json|config|lock|gitignore|gitattributes|md|log|sqlite)$">
    Require all denied
</FilesMatch>

# ✅ السماح بالوصول فقط إلى مجلدات Laravel العامة
<IfModule mod_dir.c>
    DirectoryIndex index.php
</IfModule>
